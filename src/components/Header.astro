---
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
	<header class="fixed top-0 left-0 right-0 z-40 bg-white/95 backdrop-blur-md border-b border-border/50 shadow-sm overflow-visible">
	<div class="container mx-auto px-4 sm:px-6 lg:px-8 overflow-visible">
		<div class="flex items-center justify-between h-20 lg:h-22 overflow-visible">
			<a class="flex flex-col" href="/">
				<div class="flex items-center gap-3">
					<h2 class="h-14 pt-2 mt-1 hidden md:block">MyTherapySpaces</h2>
				</div>
			</a>
			<div class="flex items-center space-x-3 overflow-visible">
				<a class="hidden md:flex items-center gap-1 text-muted-foreground hover:text-foreground px-3 py-2 rounded-lg hover:bg-muted/50 transition-colors text-sm font-medium" href="/for-therapists">
					<span>For Therapists</span>
				</a>
				<div class="relative hidden lg:block overflow-visible">
					<span class="text-sm">Trocar Lingua</span>
				</div>
				<div class="flex items-center space-x-2">
					<a href="/login">
