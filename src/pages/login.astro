---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---
<head>
  <meta charset="utf-8" />
</head>

<div class="min-h-screen bg-white text-slate-900 pt-20">
  <Header />

  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8 sm:py-12 lg:py-16">
    <div class="max-w-6xl mx-auto flex flex-col lg:flex-row gap-8 lg:gap-12">
      
      <!-- Left content -->
      <div class="hidden lg:flex lg:flex-col lg:w-1/2 lg:pr-10">
        <div class="mb-8">
          <div class="inline-flex items-center rounded-full border border-green-500/20 px-2.5 py-0.5 text-xs font-semibold text-green-600 bg-green-500/10 mb-4">
            ðŸŽ‰ Join thousands of wellness seekers
          </div>
          <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold mb-4 leading-tight">
            Start Your Wellness
            <br />
            <span class="bg-linear-to-r from-blue-600 to-blue-500 bg-clip-text text-transparent">
              Journey Today
            </span>
          </h1>
          <p class="text-lg sm:text-xl text-gray-500 mb-8 max-w-2xl lg:mx-0">
            Connect with certified therapists, join transformative programs, and discover your path to holistic wellness.
          </p>
        </div>

        <div class="space-y-4 mb-8">
          <div class="flex items-center gap-3">
            <div class="w-8 h-8 bg-green-500/10 rounded-full flex items-center justify-center">
              <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4"></path>
              </svg>
            </div>
            <span>Certified professionals and secure platform</span>
          </div>

          <div class="flex items-center gap-3">
            <div class="w-8 h-8 bg-blue-500/10 rounded-full flex items-center justify-center">
              <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4"></path>
              </svg>
            </div>
            <span>Personalized wellness recommendations</span>
          </div>

          <div class="flex items-center gap-3">
            <div class="w-8 h-8 bg-purple-500/10 rounded-full flex items-center justify-center">
              <svg class="w-4 h-4 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4"></path>
              </svg>
            </div>
            <span>24/7 support and flexible scheduling</span>
          </div>
        </div>

        <div class="rounded-lg bg-gray-50 text-gray-900 shadow-sm">
          <div class="p-6 flex items-center gap-4">
            <div class="w-12 h-12 rounded-full overflow-hidden">
              <img src="https://res.cloudinary.com/dramzribs/image/upload/v1759228091/user_upas63.png" alt="User Avatar" class="w-full h-full object-cover" />
            </div>
            <div>
              <blockquote class="italic mb-2">
                "This platform transformed my wellness journey. The therapists are amazing and the programs are life-changing!"
              </blockquote>
              <div class="text-sm text-gray-500">
                <strong>Maria Santos</strong> â€¢ Verified Member
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Right content -->
      <div class="w-full lg:w-1/2 lg:max-w-xl lg:ml-auto">
        <div class="bg-white text-gray-900 rounded-2xl shadow-xl p-6">
          <h3 class="text-2xl font-bold mb-2 text-center">Welcome to MyTherapySpaces</h3>
          <p class="text-gray-500 text-center mb-6">Join our community of wellness seekers and professionals</p>

          <form class="space-y-4">

            <!-- Top Buttons -->
            <div class="flex justify-center gap-4 mb-4">
              <button type="button" class="px-6 py-2 rounded-xl bg-blue-600 text-white font-semibold hover:bg-blue-700">
                Sign Up
              </button>
              <button type="button" class="px-6 py-2 rounded-xl border border-gray-300 text-gray-700 font-semibold hover:bg-gray-100">
                Sign In
              </button>
            </div>

            <!-- Full Name -->
            <div>
              <label for="name" class="block text-sm font-medium mb-1">Full Name</label>
              <input type="text" id="name" placeholder="Full Name" required
                class="w-full rounded-xl border border-gray-300 px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:outline-none" />
            </div>

            <!-- Email -->
            <div>
              <label for="email" class="block text-sm font-medium mb-1">Email</label>
              <input type="email" id="email" placeholder="Email" required
                class="w-full rounded-xl border border-gray-300 px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:outline-none" />
            </div>

            <!-- Password -->
            <div>
              <label for="password" class="block text-sm font-medium mb-1">Password</label>
              <input type="password" id="password" placeholder="Password" required
                class="w-full rounded-xl border border-gray-300 px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:outline-none" />
            </div>

            <!-- Profile Picture -->
            <div>
              <label class="block text-sm font-medium mb-1">Profile Picture</label>
              <div class="flex items-center gap-4">
                <div class="relative w-20 h-20">
                  <img src="https://res.cloudinary.com/dramzribs/image/upload/v1759228091/user_upas63.png"
                    alt="Preview" class="w-20 h-20 rounded-full object-cover" />
                  <label class="absolute bottom-0 right-0 bg-blue-500 hover:bg-blue-600 rounded-full p-1.5 cursor-pointer">
                    <input type="file" class="hidden" accept="image/*" />
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v12m0 0l3-3m-3 3l-3-3M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4" />
                    </svg>
                  </label>
                </div>
                <p class="text-gray-500 text-sm">Upload a profile picture to identify yourself.</p>
              </div>
            </div>

            <!-- Account Type -->
            <div>
              <label for="role" class="block text-sm font-medium mb-1">Account Type</label>
              <select id="role" required
                class="w-full border border-gray-300 rounded-xl px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:outline-none">
                <option value="" disabled>Select your role</option>
                <option value="1">Client</option>
                <option value="2">Therapist</option>
                <option value="3">Center</option>
              </select>
            </div>

            <!-- Terms -->
            <div class="flex items-center gap-2">
              <input type="checkbox" id="accept-terms" class="h-4 w-4 rounded border-gray-300 focus:ring-2 focus:ring-blue-500" required />
              <label for="accept-terms" class="text-sm text-gray-600">I accept the <a href="/terms" class="text-blue-500 hover:underline">terms and conditions</a></label>
            </div>

            <div class="flex items-center gap-2">
              <input type="checkbox" id="accept-privacy" class="h-4 w-4 rounded border-gray-300 focus:ring-2 focus:ring-blue-500" required />
              <label for="accept-privacy" class="text-sm text-gray-600">I accept the <a href="/privacy" class="text-blue-500 hover:underline">privacy policy</a></label>
            </div>

            <div class="flex items-center gap-2">
              <input type="checkbox" id="accept-marketing" class="h-4 w-4 rounded border-gray-300 focus:ring-2 focus:ring-blue-500" />
              <label for="accept-marketing" class="text-sm text-gray-600">I accept to receive marketing communications</label>
            </div>

            <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-xl py-3 mt-2">
              Create Account
            </button>

            <p class="text-center text-sm text-gray-500 mt-4">
              Already have an account? <a href="/login" class="text-blue-500 hover:underline font-medium">Sign in here</a>
            </p>
          </form>
        </div>
      </div>
    </div>
  </div>

  <Footer />
</div>
