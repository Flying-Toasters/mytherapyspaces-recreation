        <div class="relative max-w-4xl mx-auto px-4 sm:px-8 md:px-12 lg:px-20 pb-8">
            <div class="text-card-foreground bg-white/80 backdrop-blur-sm rounded-xl sm:rounded-2xl shadow-xl p-4 sm:p-6 md:p-8 lg:p-12 border border-primary/10">
